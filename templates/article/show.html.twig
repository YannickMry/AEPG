{% extends 'layouts/base.html.twig' %}

{% block title %}Actualités : {{article.title}}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="p-0 m-0 text-white rounded">
            <div class="ps-4 pt-4" style="background-image: url({{article.image}}); height: 500px; background-size: cover; background-repeat: no-repeat;">
                <h1 class="display-4 fst-italic">{{article.title}}</h1>
            </div>
        </div>
    </div>
</div>
<div class="mt-5 container">
    <div class="row">
        <div class="col">
            <div class="mb-5" style="text-align: justify;">
                {{article.content|raw}}
            </div>
            <small>Publié le {{article.createdAt|date('d/m/Y à H:i')}}</small> | <small>Auteur(s) : {{article.author}}</small>
        </div>
    </div>
</div>
{% endblock %}
