{% extends 'layouts/base_admin.html.twig' %}

{% block title %}AEPG - Actualités{% endblock %}

{% block body %}
<section class="row">
    <h1>Actualités de l'association</h1>
    <form action="">

    </form>
    {% for article in articles %}
    <div class="col-12 col-sm-6 col-xl-4 mb-5">
        <div class="card">
            <img src="{{article.image}}" alt="" class="img-card">
            <div class="card-body">
                <h5 class="card-title">{{article.title}}</h5>
                <p>
                    {{article.content|u.truncate(100, '...', false)}}
                </p>
            </div>
            <div class="card-footer">
                <a href="{{path('admin_article_edit', {slug: article.slug})}}">voir</a>
            </div>
        </div>
    </div>
    {% else %}
    <div class="alert alert-warning">
        <p>
            Aucun article n'a été trouvé...
        </p>
    </div>
    {% endfor %}
</section>
{% endblock %}

