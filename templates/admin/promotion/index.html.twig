{% extends 'layouts/base_admin.html.twig' %}

{% block title %}AEPG - Promotions{% endblock %}

{% set view = "promotionMembersList" %}

{% block body %}
<h1 class="text-center">Promotions</h1>

<div class="row">
    <div class="col-12">
        <ul class="nav nav-tabs justify-content-center">
            {% for promotion in promotions %}
            <li class="nav-item">
              <a class="nav-link text-primary js-members-list" id="promotion-{{promotion.year}}" data-year="{{promotion.year}}" data-view="{{view}}" href="#">{{promotion.year}}</a>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>
<div class="my-3 row">
    <div class="col-4 col-md-2">
        <input id="promotion-search" class="form-control me-2 border-primary" type="search" placeholder="Rechercher...">
    </div>
</div>
<section id="members" class="mt-3">
    {{ render(controller('App\\Controller\\Admin\\AdminAjaxMemberController::ajaxShowMembersOfPromotion', {view: view})) }}
</section>
{% endblock %}