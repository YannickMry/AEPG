        <div class="card">
            <div class="card-header">
                <h4 class="fw-bold text-warning">Informations du profil</h4>
            </div>
            <div class="card-body">
                {% include "layouts/partials/_form.html.twig" with {form: formProfile, btn: 'Modifier mes informations'} %}
